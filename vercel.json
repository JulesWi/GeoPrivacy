{
  "version": 2,
  "name": "geoprivacy",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "src/backend/server.ts",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "OP_SEPOLIA_RPC_URL": "@op_sepolia_rpc_url",
    "USDC_TOKEN_ADDRESS": "@usdc_token_address",
    "PRIVATE_KEY": "@private_key",
    "OPTIMISM_ETHERSCAN_API_KEY": "@optimism_etherscan_api_key",
    "NEXT_PUBLIC_APP_ENV": "production"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/"
    }
  ],
  "github": {
    "silent": true
  }
}
